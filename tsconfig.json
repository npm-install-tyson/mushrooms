{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"app/(tabs)/_layout.jsx",
		"app/details/[id].tsx",
		"app/(tabs)/index.tsx",
		"app/_layout.jsx"
	]
}
